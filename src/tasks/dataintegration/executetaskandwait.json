        "requestHeaders": {
            "Content-Type": "application/json"
        },
        "configValues": {
            "configParamValues": {
                "requestURL": {
                    "stringValue": "https://dataintegration.${SYS.REGION}.oci.oraclecloud.com/20200430/workspaces/${SYS.WORKSPACE_ID}/applications/${SYS.APPLICATION_KEY}/taskRuns"
                },
                "requestPayload": {
                    "refValue": {
                        "modelType": "JSON_TEXT",
