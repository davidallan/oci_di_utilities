                        "parentRef": {
                            "parent": "79c7a56c-9c20-4261-a4d7-ed714c21e5d7"
                        },
                        "encoded": false,
                        "configValues": {
                            "configParamValues": {
                                "dataParam": {
                                    "stringValue": "{\n  \"registryMetadata\": {\n    \"aggregatorKey\": \"${TASK_KEY}\"\n  }\n}"
                                }
                            }
                        }
                    }
                }
            },
            "parentRef": {}
        },
    },
    "cancelRestCallConfig": {
        "modelType": "REST_CALL_CONFIG",
